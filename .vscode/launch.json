{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Connect to remote",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345,
            "substitutePath": [
                {
                    "from": "${workspaceFolder}/app/src",
